html, body
    padding 0
    margin 0
    font-family 'Outfit', sans-serif
    text-transform uppercase
    font-size 1rem

.wrapper
    position relative
    height 100vh
    display flex
    justify-content center
    align-items center
    background #1a2b33
    color #a9bec8

.container
    min-width: 40em
    background #1e3640
    border-radius 10px
    box-shadow rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px
    display grid
    place-items center
    font-size 1rem
    padding 3rem 0

.field
    height 30em
    width 80%
    margin 2em auto

.btn
    font-family 'Outfit', sans-serif
    background #f2b138
    color #1a2b33
    padding-bottom 5px
    display grid
    place-items center
    font-weight 700
    text-transform uppercase
    border none
    outline none
    padding 15px 40px
    border-radius 10px
    transition all .3s ease
    box-shadow rgba(0, 0, 0, 0.24) 0px 3px 8px